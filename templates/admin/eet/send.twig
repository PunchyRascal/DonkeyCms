{% extends "admin/base.twig" %}

{% block contentAdmin %}

	<h1>
		Zaevidovat tržbu
	</h1>

	<form action="/" method="post" class="form-horizontal">

		<div class="form-group">
			<label for="amount" class="col-sm-2 control-label">Částka</label>
			<div class="col-sm-4">
				<input class="form-control" type="number" name="amount" id="amount" />
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<div class="checkbox">
					<label title="Pokud je zaškrtnuto, bude ověřena funkčnost systému. Zaslání datové zprávy
v ověřovacím módu není zasláním údajů o evidované tržbě ve smyslu §18 ZoET.">
						<input type="checkbox" value="1" name="verification_only" id="discussion" {{ item.enable_discussion ? 'checked' }}>
						poslat v oveřovacím režimu
					</label>
				</div>
			</div>
		</div>

		<div class="text-center">
			<input class="btn btn-primary btn-lg" type="submit"
			   name="sendSale" value="Odeslat na Finanční správu" />
		</div>

		<input type="hidden" name="p" value="admin" />
		<input type="hidden" name="action" value="eetSend" />
	</form>

{% endblock %}
