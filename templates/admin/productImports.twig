{% extends "admin/base.twig" %}

{% block contentAdmin %}

	<h1>Importování produktů</h1>

	<table class='table table-striped'>
		<tr>
			<th>název</th>
			<th>aktivní</th>
			<th>cenový faktor</th>
			<th>poslední import</th>
		</tr>

		{% for item in items %}
			<tr>
				<td>{{ item.name }}</td>
				<td><span class="{{item.active ? 'glyphicon glyphicon-ok' : 'glyphicon glyphicon-ban-circle'}}"></span></td>
				<td>{{ item.price_factor }}</td>
				<td class='nobr'>{{ item.last_import_date ? item.last_import_date|datetime : '-' }}</td>
			</tr>
		{% endfor %}
	</table>

{% endblock %}