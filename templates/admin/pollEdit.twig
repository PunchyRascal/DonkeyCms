{% extends "admin/base.twig" %}

{% block contentAdmin %}

	<h1>Upravit/vložit anketu</h1>

	<form action="/" method="post" class="form-horizontal">

		<div class="form-group">
			<label for="quest" class="col-sm-2 control-label">Otázka</label>
			<div class="col-sm-10">
				<input class="form-control" type="text" name="quest" id="quest" value="{{ item.question }}" />
			</div>
		</div>

		{% for i in range(1, 5) %}
			<div class="form-group">
				<label for="quest" class="col-sm-2 control-label">Odpověď {{i}}</label>
				<div class="col-sm-10">
					<input class="form-control" type="text" name="ans{{i}}" id="quest" value="{{ item["ans" ~ i] }}" />
				</div>
			</div>
		{% endfor %}

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<div class="checkbox">
					<label>
						<input type="checkbox" name="active" id="active" {{ item.active ? 'checked' }} />
						Aktivní
					</label>
				</div>
			</div>
		</div>

		<br />

		<div class="text-center">
			<input class="btn btn-primary btn-lg" type="submit" name="add_ank" value="Uložit" />
		</div>

		<input type="hidden" name="id" value="{{ item.id }}" />
		<input type="hidden" name="pollEditSubmit" value="1" />
		<input type="hidden" name="p" value="admin" />
		<input type="hidden" name="action" value="pollEdit" />
	</form>

{% endblock %}