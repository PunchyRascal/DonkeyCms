{% macro priceTable(items, editAction) %}
	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>Cena</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for item in items %}
				<tr>
					<td>{{item.name}}</td>
					<td>
						{% if item.price == 0 %}
							zdarma
						{% else %}
							{{item.price}}&nbsp;Kč
						{% endif %}
					</td>
					<td>
						<a class="btn btn-primary" href="/?p=admin&amp;action={{editAction}}&amp;id={{item.id}}">Editovat</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endmacro %}

{% extends "admin/base.twig" %}

{% block contentAdmin %}

	{% import _self as macros %}

	<h1>Ceny dopravy a platby</h1>

	<h2>Doprava</h2>

	{{ macros.priceTable(deliveries, 'deliveryEdit')}}

	<h2>Platební metody</h2>

	{{ macros.priceTable(payments, 'paymentEdit')}}

{% endblock %}