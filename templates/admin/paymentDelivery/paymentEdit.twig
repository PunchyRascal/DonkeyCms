{% extends "admin/base.twig" %}

{% block contentAdmin %}

	<h1>
		Vložit / upravit platební metodu
	</h1>

	<form action="/" method="post" class="form-horizontal">

		<div class="form-group">
			<label class="col-sm-2 control-label">ID</label>
			<div class="col-sm-10">
				<input disabled class="form-control" type="text" value="{{ item.id }}" />
			</div>
		</div>

		<div class="form-group">
			<label for="inputName" class="col-sm-2 control-label">Název</label>
			<div class="col-sm-10">
				<input class="form-control" type="text" name="name" id="inputName" value="{{ item.name }}" />
			</div>
		</div>

		<div class="form-group">
			<label for="inputPrice" class="col-sm-2 control-label">Cena</label>
			<div class="col-sm-10">
				<input class="form-control" type="number" name="price" id="inputPrice" value="{{ item.price }}" />
			</div>
		</div>

		<div class="form-group">
			<label for="inputPriority" class="col-sm-2 control-label">Pořadí</label>
			<div class="col-sm-10">
				<input class="form-control" type="number" name="priority" id="inputPriority" value="{{ item.priority }}" />
			</div>
		</div>

		<div class="form-group">
			<label for="inputType" class="col-sm-2 control-label">Kdy se platí</label>
			<div class="col-sm-10">
				<select class="form-control" id="inputType" name="type">
					<option value="before_delivery" {{ item.type == 'before_delivery' ? "selected" }}>před doručením</option>
					<option value="on_delivery"	{{ item.type == 'on_delivery' ? "selected" }}>při doručení</option>
				</select>
			</div>
		</div>

		<br>

		<input class="btn btn-primary btn-lg btn-block" type="submit" name="paymentEditSubmit" value="Uložit" />

		<input type="hidden" name="id" value="{{ item.id }}" />
		<input type="hidden" name="p" value="admin" />
		<input type="hidden" name="action" value="paymentEdit" />
	</form>

{% endblock %}