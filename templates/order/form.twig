{% extends "base/layout.twig" %}

{% block content %}

	{% if showFormError %}
		<div class="messageKo">
			Některá z položek nebyla správně vyplněna.
		</div>
	{% endif %}

	<h1>Kontaktní údaje</h1>

	<form action="/" method="post" class="form-horizontal orderAddressForm">

		<div class="form-group">
			<label for="fieldName" class="col-lg-3 control-label">Jméno a příjmení</label>
			<div class="col-lg-6">
				<input class="form-control" required type="text" size="35" name="name" id="fieldName" value="{{ order.name }}" />
			</div>
		</div>

		<div class="form-group">
			<label for="fieldStreet" class="col-lg-3 control-label">Ulice a číslo</label>
			<div class="col-lg-6">
				<input class="form-control" required type="text" size="35" name="street" id="fieldStreet" value="{{ order.street }}" />
			</div>
		</div>

		<div class="form-group">
			<label for="fieldCity" class="col-lg-3 control-label">Město</label>
			<div class="col-lg-6">
				<input class="form-control" required type="text" size="35" name="town" id="fieldCity" value="{{ order.town }}" />
			</div>
		</div>

		<div class="form-group">
			<label for="fieldZip" class="col-lg-3 control-label">PSČ</label>
			<div class="col-lg-6">
				<input class="form-control" required type="text" size="35" name="zip" id="fieldZip" value="{{ order.zip }}" />
			</div>
		</div>

		<div class="form-group">
			<label for="fieldEmail" class="col-lg-3 control-label">E-mail</label>
			<div class="col-lg-6">
				<input class="form-control" required type="email" size="35" name="email" id="fieldEmail" value="{{ order.email }}" />
			</div>
		</div>

		<div class="form-group">
			<label for="fieldPhone" class="col-lg-3 control-label">Telefon</label>
			<div class="col-lg-6">
				<input class="form-control" required type="tel" pattern="((\+|00)420)?[0-9]{9}" title="např. 777123456 nebo +420777123456" size="35" name="phone" id="fieldPhone" value="{{ order.phone }}" />
			</div>
		</div>

		<div class="form-group">
			<label for="fieldName" class="col-lg-3 control-label">Poznámka</label>
			<div class="col-lg-6">
				<textarea placeholder="Upřesnění objednávky atd." class="form-control" cols="60" rows="4" name="note" id="note">{{ order.note }}</textarea>
			</div>
		</div>

		<div class="form-group">
			<div class="col-lg-offset-3 col-lg-6">
				<div class="checkbox">
					<label>
						<input id="rememberOrderFormData" type="checkbox" value="1" name="remember">
						Zapamatovat údaje pro příští objednávku
					</label>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="col-lg-6 col-lg-push-3">
				<input class="btn btn-primary form-control" type="submit"
					   name="order_submit1" id="order_submit1" value="Rekapitulace objednávky »" />
			</div>
		</div>

		<input type="hidden" name="step"  value="2" />
		<input type="hidden" name="p"  value="objednavka" />

	</form>

	<a href="/?p=kosik" class="btn btn-default"><span class="text-muted">&laquo; Zpět do košíku</span></a>

{% endblock %}
