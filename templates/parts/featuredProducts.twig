<div class="row">
	<div id="featuredProducts">
		{% for item in featured %}
			<div class="col-sm-6 col-md-4 editObject" data-edit-action="e_item_edit" data-edit-id="{{ item.id }}">
				<a href="/?p=e-shop&amp;id={{ item.id }}" title="{{ item.name }}">
					<div class="thumbnail">
						<div class="img">
							<img src="{{ '/pimage/'~item.id~'?maxWidth=233' }}" alt="">
						</div>
						<div class="caption text-center">
							<h4>{{ cut(item.name, 30)|raw }}</h4>
						</div>
					</div>
				</a>
			</div>
		{% endfor %}
	</div>
</div>